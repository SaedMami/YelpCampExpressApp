<% include ../partials/header%>
<div class="container-fluid">
    <h1 style="text-align:center;">Add a new comment to <%= campground.name %></h1>
    <div style="width:30%; text-align:center; margin:25px auto;">
        <form method="POST" action="/campgrounds/<%= campground._id %>/comments">
            <div class="form-group">
                <input class="form-control" type="textarea" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-block btn-primary">Submit</button>
            </div>
        </form>

        <a href="/campgrounds">Go back</a>
    </div>
</div>
<% include ../partials/footer%>