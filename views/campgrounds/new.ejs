<% include ../partials/header%>
<div class="container-fluid">
    <h1 style="text-align:center;">Add a new campground</h1>
    <div style="width:30%; text-align:center; margin:25px auto;">
        <form method="POST" action="/campgrounds">
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" placeholder="campground name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[image]" placeholder="campground image">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" min=".01" step=".01" name="campground[price]" placeholder="price per night">
            </div>
            <div class="form-group">
                <input class="form-control" type="textarea" name="campground[description]" placeholder="campground description">
            </div>
            <div class="form-group">
                <button class="btn btn-block btn-primary">Submit</button>
            </div>
        </form>

        <a href="/campgrounds">Go back</a>
    </div>
</div>
<% include ../partials/footer%>